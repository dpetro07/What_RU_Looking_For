
<!-- Registration-->
<div class="container">
  <div class="row">
  <div class="col l10 offset-l1 col m10 offset-m1 s10 offset-s1" style="
    margin-bottom: 20px;
">
      <div class="col l10 offset-l1 col m10 offset-m1 col s10 offset-s1 companyNameBox">
    <h5 class="createReview companyName">Register:</h5>
  </div>
</div>
    <form action="/register" method="POST" class="col l10 offset-l2 col m10 offset-m2 s10 offset-s2" id="registerform">
      <div class="row">
        <div class="input-field col l5 m5 s5">
          <input placeholder="First Name" id="firstname" type="text" name="firstname">
        </div>
        <div class="input-field col l5 m5 s5">
          <input placeholder="Last Name" id="lastname" type="text" name="lastname">
        </div>
        <div class="input-field col l10 m10 s10">
          <input placeholder="Username" id="username" type="text" name="username">
        </div>
      </div>

      <div class="row">
        <div class="input-field col l10 m10 s10">
          <input placeholder="Password" id="password" type="password" name="password">
        </div>
      </div>
      
      <div class="row">
        <div class="input-field col l10 col s10">
          <input placeholder="Email" id="email" type="email" name="email">
        </div>
      </div>
      <button class="btn waves-effect waves-light registerSubmitBtn col l4 offset-l3 col m6 offset-m2 col s8 offset-s1" type="submit"><i class="material-icons left fa fa-upload"></i>Submit</button>
    </form>
  </div>
</div>

