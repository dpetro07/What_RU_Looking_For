
{{#each places}}
<div class="row">
  <div class="col s12 m6">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <span class="card-title">{{ category }}</span>
      </div>
      <div class="card-action">
        <p>Place:  {{ company }} </p>
        <p>Address: {{ address }} </p>
        <p>Telephone: {{ telephone }} </p>
        <p>Description: {{ description }} </p>
      </div>
    </div>
  </div>
</div>






<h3>Comment Section</h3>

<form action="/newreview/{{id}}" method="POST" class="col s12" id="reviewform">
  <div class="input-field col s10">
    <div class="row">
      <div class="input-field col s10">
        <textarea id="description" class="materialize-textarea" name="message"></textarea>
        <label for="description">Description:</label>
      </div>
    </div>

    <div class="row">
      <div class="row">
        <div class="input-field col s5">
          <input id="icon_prefix" type="number" id="stars" name="rating">
          <label for="icon_prefix">Rating (1-5)</label>
        </div>

        <div class="input-field col s5">
          <input id="icon_telephone" type="number" name="price">
          <label for="icon_telephone">Price (1-5)</label>
        </div>
      </div>
    </div>
    </div>
          <button class="btn waves-effect waves-light" type="submit">Submit
      </button>
  </form>

{{#Reviews}}
{{#User}}

<div class="row">
  <div class="col s12 m6">
    <div class="card gree darken-1">
      <div class="card-content black-text">
        <span class="card-title"></span>
      </div>
      <div class="card-action">
      {{username}},&nbsp;&nbsp;&nbsp;&nbsp;{{createdAt}}
      {{/User}}
      <p>Star Rating : {{rating}}</p>
      <p>{{message}}</p>
      </div>
    </div>
  </div>
</div>

{{/Reviews}}
{{/each}}
