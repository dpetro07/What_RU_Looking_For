
{{#each places}}
<div class="row">
  <div class="col s12 m12">
   <div class="card singular">
    <div class="card-image waves-effect waves-block waves-light">
      <img class="activator" src="{{imgUrl}}">
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4">{{company}}</span>
      <p><a href="/place/{{category}}/{{id}}" class="waves-effect waves-light btn reviewBtn"><i class="material-icons left fa fa-comments-o"></i>Reviews</a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4">{{company}}<i class="material-icons right">x</i></span>
        <h5>Category:</h5> {{category}} </p>
        <h5>Address:</h5> {{ address }} </p>
        <h5>Telephone:</h5> {{ telephone }} </p>
        <h5>Description:</h5> {{ description }} </p>
        <a href="/place/{{category}}/{{id}}" class="waves-effect waves-light btn reviewBtn"><i class="material-icons left fa fa-comments-o"></i>Reviews</a>

        <a href="/deleteplace/{{id}}" class="waves-effect waves-light btn reviewBtn"><i class="material-icons left fa fa-trash-o"></i>Delete Review</a>
    </div>
  </div>

  </div>
</div>








<h3>Comment Section</h3>

<form action="/newreview/{{id}}" method="POST" class="col s12" id="reviewform">
  <div class="input-field col s10">
    <div class="row">
      <div class="input-field col s10">
        <textarea id="comment" class="materialize-textarea" name="comment"></textarea>
        <label for="description">Comment:</label>
      </div>
    </div>

    <div class="row">
      <div class="row">
        <div class="input-field col s5">
          <input id="icon_prefix" type="number" id="rating" name="rating">
          <label for="icon_prefix">Rating (1-5)</label>
        </div>

        <div class="input-field col s5">
          <input id="icon_telephone" type="number" name="price">
          <label for="icon_telephone">Price (1-5)</label>
        </div>
      </div>
    </div>
    </div>
          <button class="btn waves-effect waves-light" type="submit">Submit
      </button>
  </form>

{{#Reviews}}
{{#User}}

<div class="row">
  <div class="col s12 m6">
    <div class="card gree darken-1">
      <div class="card-content black-text">
        <span class="card-title"></span>
      </div>
      <div class="card-action">
      {{username}},&nbsp;&nbsp;&nbsp;&nbsp;{{createdAt}}
      {{/User}}
      <p>Star Rating : {{rating}}</p>
      <p>{{message}}</p>
      </div>
    </div>
  </div>
</div>

{{/Reviews}}
{{/each}}
