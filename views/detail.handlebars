
<div class="container">
  <div class="col s10 offset-s1">
    <h1>Create Place</h1>

    <div class="row">
      <form action="/addplace" method="POST" class="col s12" id="placeform">
        <div class="input-field col s12">
          <select id="inputfield" name="category">
            <option value="" disabled selected>Category</option>
            <option value="">All</option>
            <option value="food">Food</option>
            <option value="nightlife">Nightlife</option>
            <option value="classroom-buildings">Classroom Buildings</option>
            <option value="tourism">Tourism</option>
          </select>
          <label>Category Select</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s12">
          <input id="icon_prefix" type="text" id="company" name="company">
          <label for="icon_prefix">Company</label>
        </div>
      </div>

      <div class="row">
        <div class="input-field col s6">
          <input id="icon_prefix" type="text" id="address" name="address">
          <label for="icon_prefix">Address</label>
        </div>

        <div class="input-field col s6">
          <input id="icon_telephone" type="tel" name="telephone">
          <label for="icon_telephone">Telephone</label>
        </div>
      </div>


      <div class="row">
        <div class="input-field col s6">
          <input id="icon_prefix" type="number" id="stars" name="stars">
          <label for="icon_prefix">Rating (1-5)</label>
        </div>

        <div class="input-field col s6">
          <input id="icon_telephone" type="number" name="price">
          <label for="icon_telephone">Price (1-5)</label>
        </div>
      </div>


      <div class="row">
        <div class="input-field col s12">
          <input id="icon_prefix" type="text" id="imgUrl" name="imgUrl"></input>
          <label for="img-url">Img Url</label>
        </div>
      </div>

      <div class="row">
        <form class="col s12">
          <div class="row">
            <div class="input-field col s12">
            <textarea id="description" name="description" class="materialize-textarea"></textarea>
              <label for="textarea1">Description</label>
            </div>
          </div>
        </form>
      </div>


      <button class="btn waves-effect waves-light" type="submit">Submit
      </button>
    </form>
  </div>
</div>

